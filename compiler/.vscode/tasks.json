                "-g",
                "-std=c++17",
                "-stdlib=libc++",
                "main.cpp",
                "source.cpp",
                "token.cpp",
                "ast.cpp",
                "-o",
                "${workspaceFolder}/opelac.vscode_debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}